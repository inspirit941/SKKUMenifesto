				<div class="6u 12u$(small)">
							
					<div class="table-wrapper">
					<% @years.each do |year| %>
						<% if year.name == 2016 %>
								<% year.locations.each do |l1| %>
									<%if l1.name=='자과캠'%>
										<h2><%=l1.name%></h2>
										<% l1.categories.each do |ct| %>
										<h4><%=ct.name%> </h4>
										<h6></h6>
										<table class="table">
											<thead class="thead-light">
												<tr>
													 <th scope="col">#</th>
